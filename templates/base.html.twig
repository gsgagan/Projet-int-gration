            font-weight: 500;
        }

        .cart-link {
            display: inline-flex;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.15);
            padding: 4px 12px;
            border-radius: 20px;
            margin-left: 15px;
            transition: background-color 0.2s;
        }

        .cart-link:hover {
            background-color: rgba(255, 255, 255, 0.25);
            color: white;
        }

        .cart-count {
            background-color: #ee6c4d;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            margin-left: 5px;
            font-weight: bold;
        }

        .login-btn, .register-btn, .logout-btn {
            padding: 4px 12px;
            border-radius: 20px;
            font-weight: 500;
        }

