{% extends 'base.html.twig' %}

{% block title %}Détail de la Localité{% endblock %}

{% block body %}
    <h1>Détail de la Localité</h1>
    <p><strong>Code Postal :</strong> {{ locality.postalCode }}</p>
    <p><strong>Localité :</strong> {{ locality.locality }}</p>

    <h2>Liste des Lieux</h2>
    <ul>
        {% for location in locality.locations %}
            <li>{{ location.designation }}</li>
        {% else %}
            <li>Aucun lieu trouvé.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_locality_index') }}">Retour à la liste</a>
{% endblock %}
