{% extends 'base.html.twig' %}

{% block title %}Liste des Types{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Liste des Types</h2>

    <div class="card shadow p-4">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.name }}</td>
                        <td>
                            <a href="{{ path('app_type_show', {'id': type.id}) }}" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">Aucun type trouv√©</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_type_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un Type
        </a>
    </div>
</div>
{% endblock %}
