{% extends 'base.html.twig' %}

{% block title %}Détails du Type{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Détails du Type</h2>

    <div class="card shadow p-4">
        <p><strong>ID:</strong> {{ type.id }}</p>
        <p><strong>Nom:</strong> {{ type.name }}</p>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_type_index') }}" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Retour à l'index
        </a>
        <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>
    </div>
</div>
{% endblock %}
